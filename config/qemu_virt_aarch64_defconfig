# For Build
CONFIG_PLATFORM_QEMU_VIRT=y
CONFIG_PLATFORM=qemu-virt
CONFIG_SYSTEM_ARCH=armv8-a
CONFIG_SYSTEM_CORE=cortex-a53
CONFIG_CROSS_COMPILE=aarch64-none-linux-gnu-

# For QEMU
CONFIG_QEMU_CPU=cortex-a53
CONFIG_QEMU_SMP=4
CONFIG_QEMU_RAM=1G
CONFIG_QEMU_GIC=2
CONFIG_QEMU_SECURE=on
CONFIG_QEMU_VIRTUALIZATION=off
CONFIG_QEMU_MACHINE=virt,gic-version=$(CONFIG_QEMU_GIC)
CONFIG_QEMU_FLAGS=-d unimp -semihosting-config enable=on -nographic
CONFIG_QEMU=qemu-system-aarch64
